
%p
  %b Title:
  = @reading_list.title
%p
  %b Description:
  = @reading_list.description
  
%p Books:
%table
  %tbody
  -@reading_list.books.each do |book|
    %tr{id: "book_#{book.id}"}
      %td= book.title
      %td= book.author
      %td= link_to 'Show', book
      %td= link_to 'Edit', edit_book_path(book)
      %td= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => true
%p= link_to 'Add Book', new_book_path(reading_list_id: @reading_list)

= link_to 'Edit', edit_reading_list_path(@reading_list)
\|
= link_to 'Back', reading_lists_path
