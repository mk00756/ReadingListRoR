= form_for @reading_list do |f|
  - if @reading_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reading_list.errors.count, "error")} prohibited this reading_list from being saved:"
      %ul
        - @reading_list.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
